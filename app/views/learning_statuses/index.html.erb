<%- model_class = LearningStatus -%>
<div class="jumbotron">
  <div class="container">
<div class="page-header">
  <h1>Learning Statuses</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:learning_status) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @learning_statuses.each do |learning_status| %>
      <tr>
        <td><%= learning_status.id %></td>
        <td><%= learning_status.learning_status %></td>
        <td>
          <%= link_to learning_status_path(learning_status), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to learning_status_path(learning_status), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_learning_status_path,
            :class => 'btn btn-primary' %>
  </div>
</div>